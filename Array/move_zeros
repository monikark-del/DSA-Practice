#include<iostream>
using namespace std;
void move_zeros(int a[],int n)
{
    int insertposition=0;
    for(int i=0;i<n;i++)
    {
        if(a[i]!=0)
        {
            a[insertposition]=a[i];
            insertposition++;
        }
    }
    while(insertposition<n)
    {
        a[insertposition++]=0;
    }
    for(int i=0;i<n;i++)
    {
        cout<<a[i]<<" ";
    }
}
int main()
{
    int a[]={0,1,0,3,0,0,12};
    int n=sizeof(a)/sizeof(a[0]);
    move_zeros(a,n);
    return 0;
}
