#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
void rotate_array(vector<int> &num,int k)
{
    k%=num.size();
    reverse(num.begin(),num.end());
    reverse(num.begin(),num.begin()+k);
    reverse(num.begin()+k,num.end());
    cout<<"the rotated array is:"<<endl;
    for(int i=0;i<num.size();i++)
    {

        cout<<num[i]<<" ";
    }


}
int main()
{
    int a[]={1,2,3,4,5,6,7};
    vector<int> num(a,a+sizeof(a)/sizeof(a[0]));
    int k;
    cout<<"enter number of steps to rotate:";
    cin>>k;
    cout<<"the given array is:"<<endl;
    for(int i=0;i<num.size();i++)
    {

        cout<<num[i]<<" ";
    }
    cout<<endl;
    rotate_array(num,k);
    return 0;
}
