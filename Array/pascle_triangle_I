#include<iostream>
using namespace std;
int main()
{
    int numRows;
    cout<<"enter number of rows:";
    cin>>numRows;
    for( int i=0;i<numRows;i++)
    {
        int value=1;
        for(int space=0;space<numRows-i-1;space++)
        {
            cout<<" ";
        }
        for(int j=0;j<=i;j++)
        {
            cout<<value<<" ";
            value=value*(i-j)/(j+1);
        }
    cout<<endl;
    }
    return 0;
}
