#include<iostream>
using namespace std;
string addbinary(string a,string b)
{
   string result="";
   int carry=0;
   int m=a.length()-1;
   int n=b.length()-1;
   while(m>=0||n>=0||carry!=0)
   {
       int sum=carry;
       if(m>=0)
       {
           sum+=a[m--]-'0';
       }
       if(n>=0)
       {
           sum+=b[n--]-'0';
       }
       result=char((sum%2)+'0')+result;
       carry=sum/2;

   }
   cout<<"addition of two binary numbers is:"<<result;

}
int main()
{
    string a="1011";
    string b="1101";
    addbinary(a,b);
    return 0;

}
