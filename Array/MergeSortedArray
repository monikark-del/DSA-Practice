#include<iostream>
using namespace std;
void merge_sorted_array(int a[],int m,int b[],int n)
{
    int position1=m-1;
    int position2=n-1;
    int k=m+n-1;
    while(position2>=0)
    {
        if(position1>=0 && a[position1]>b[position2])
        {
            a[k--]=a[position1--];
        }
        else
        {
            a[k--]=b[position2--];
        }

    }
    cout<<"the sorted array after merging is:";
    for(int i=0;i<m+n;i++)
    {
        cout<<a[i]<<" ";
    }


}
int main()
{
    int a[]={1,3,5,7,9};
    int b[]={0,2,4,6,8};
    int m,n;
    m=sizeof(a)/sizeof(a[0]);
    n=sizeof(b)/sizeof(b[0]);
    merge_sorted_array(a,m,b,n);
    return 0;



}
